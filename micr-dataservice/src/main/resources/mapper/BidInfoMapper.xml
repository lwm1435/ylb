<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lwm.dataservice.mapper.BidInfoMapper">

    <resultMap id="BaseResultMap" type="com.lwm.common.model.BidInfo">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="prodId" column="prod_id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="bidMoney" column="bid_money" jdbcType="DECIMAL"/>
        <result property="bidTime" column="bid_time" jdbcType="TIMESTAMP"/>
        <result property="bidStatus" column="bid_status" jdbcType="INTEGER"/>
    </resultMap>

    <!--用户的投资记录的映射-->
    <resultMap id="InvestRecordVO" type="com.lwm.common.vo.InvestRecordVO">
        <id column="id" property="id"/>
        <result column="product_name" property="productName"/>
        <result column="bid_money" property="bidMoney"/>
        <result column="bid_time" property="bidTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,prod_id,uid,
        bid_money,bid_time,bid_status
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from b_bid_info
        where id = #{id,jdbcType=INTEGER}
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete
        from b_bid_info
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.lwm.common.model.BidInfo"
            useGeneratedKeys="true">
        insert into b_bid_info
        ( prod_id, uid
        , bid_money, bid_time, bid_status)
        values ( #{prodId,jdbcType=INTEGER}, #{uid,jdbcType=INTEGER}
               , #{bidMoney,jdbcType=DECIMAL}, #{bidTime,jdbcType=TIMESTAMP}, #{bidStatus,jdbcType=INTEGER})
    </insert>
    <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.lwm.common.model.BidInfo"
            useGeneratedKeys="true">
        insert into b_bid_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="prodId != null">prod_id,</if>
            <if test="uid != null">uid,</if>
            <if test="bidMoney != null">bid_money,</if>
            <if test="bidTime != null">bid_time,</if>
            <if test="bidStatus != null">bid_status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id,jdbcType=INTEGER},</if>
            <if test="prodId != null">#{prodId,jdbcType=INTEGER},</if>
            <if test="uid != null">#{uid,jdbcType=INTEGER},</if>
            <if test="bidMoney != null">#{bidMoney,jdbcType=DECIMAL},</if>
            <if test="bidTime != null">#{bidTime,jdbcType=TIMESTAMP},</if>
            <if test="bidStatus != null">#{bidStatus,jdbcType=INTEGER},</if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.lwm.common.model.BidInfo">
        update b_bid_info
        <set>
            <if test="prodId != null">
                prod_id = #{prodId,jdbcType=INTEGER},
            </if>
            <if test="uid != null">
                uid = #{uid,jdbcType=INTEGER},
            </if>
            <if test="bidMoney != null">
                bid_money = #{bidMoney,jdbcType=DECIMAL},
            </if>
            <if test="bidTime != null">
                bid_time = #{bidTime,jdbcType=TIMESTAMP},
            </if>
            <if test="bidStatus != null">
                bid_status = #{bidStatus,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.lwm.common.model.BidInfo">
        update b_bid_info
        set prod_id    = #{prodId,jdbcType=INTEGER},
            uid        = #{uid,jdbcType=INTEGER},
            bid_money  = #{bidMoney,jdbcType=DECIMAL},
            bid_time   = #{bidTime,jdbcType=TIMESTAMP},
            bid_status = #{bidStatus,jdbcType=INTEGER}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <!--查询总成交金额-->
    <select id="selectTotalMoney" resultType="java.math.BigDecimal">
        SELECT round(SUM(bid_money))
        FROM b_bid_info
    </select>

    <!--查询投资排行前三-->
    <select id="selectInvestRank" resultType="com.lwm.common.vo.InvestRank">
        SELECT SUM(b.bid_money) AS money,
               u.phone
        FROM u_user u
                 JOIN b_bid_info b
                      ON u.id = b.uid
        GROUP BY u.id, u.phone
        ORDER BY money DESC
        LIMIT 0,3
    </select>
    <!--根据产品id分页查投资记录-->
    <select id="selectPageByProdId" resultType="com.lwm.common.vo.ProductBidInfo">
        SELECT b.id,
               DATE_FORMAT(bid_time, '%Y-%m-%d') AS bidDateTime,
               bid_money                         AS bidMoney,
               u.phone
        FROM u_user u
                 JOIN b_bid_info b
                      ON u.id = b.uid
        WHERE b.prod_id = #{prodId}
        ORDER BY b.bid_time DESC
        LIMIT #{offset}, #{pageSize};
    </select>

    <!--根据用户id分页查询的投资记录-->
    <select id="selectPageByUid" resultMap="InvestRecordVO">
        SELECT b.id,
               p.product_name,
               b.bid_money,
               DATE_FORMAT(b.bid_time, '%Y-%m-%d') AS bid_time
        FROM b_product_info p
                 JOIN b_bid_info b ON p.id = b.prod_id
        WHERE b.uid = #{uid}
        ORDER BY bid_time DESC
        LIMIT #{offset},#{pageSize};
    </select>
    <!--根据产品id查询投资记录-->
    <select id="selectByProdId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM b_bid_info
        WHERE prod_id = #{id}
    </select>
</mapper>
